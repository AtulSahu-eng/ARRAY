

public class ArrayEvenOdd {

	public void even( int arr[])
	{
		for(int  i=0;i<arr.length;i++)
		{
			if(arr[i]%2==0) {
				System.out.println(arr[i]);
			}
		}
	
	}
	public void odd( int []arr)
	{
		for( int i=0;i<arr.length;i++)
		{
			if(arr[i]%2!=0) {
				System.out.println(arr[i]);
			}
		}
		
	}
//this is main method to call odd method and even method
	public static void main(String[] args) {
		int []arr= {5,9,6,7,12,8,2};
		ArrayEvenOdd array=new ArrayEvenOdd();
		System.out.println("even elements in array :");
		array.even(arr);//this method is used for filter the even elements
		System.out.println("odd elements in array :");
		array.odd(arr);//this method is used for filter the odd elements
		
	}
}
