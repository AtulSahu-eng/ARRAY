//Q:1:-how to find even or odd value using array
package p1;
import java.util.Scanner;
public class Array_Example2 {
	public static void main(String []a)
	{
		//Scanner class is use to take input from user
		Scanner sc=new Scanner(System.in);
		int int_a[]=new int[5];//declaration of the range to int array
		
		//this loop check the condition and run till condition is True
	for(int i=0;i<int_a.length;i++)
	{
		System.out.println("enter int array value");
		int_a[i]=sc.nextInt();//take user input and store the value in array
		
	}
	
	//this loop check the condition and run till condition is True
	for(int i=0;i<int_a.length;i++)
	{
		//condition will be true printing the even user input
		if (int_a[i]%2==0)
		{
			System.out.println("given int index value is even");
		
		System.out.println(int_a[i]);
		}
		else
		{
			//condition will be true printing the odd user input
			System.out.println("given int index value is odd");
			
			System.out.println(int_a[i]);
			
		}
	}
	
	}

}
